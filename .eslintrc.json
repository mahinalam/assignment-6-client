{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "next/core-web-vitals" // If using Next.js
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json" // For TypeScript
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["warn", "single"],
    "no-console": "error",
    "@typescript-eslint/no-explicit-any": "warn",
    "no-useless-catch": "warn",
    "@typescript-eslint/no-unused-vars": "warn"
  }
}
